<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="match_parent" >

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPickerDatePickerSecond"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPickerDatePickerThird"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/numberPickerDatePickerSecond"
        android:layout_toEndOf="@+id/numberPickerDatePickerSecond" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPickerDatePickerFirst"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/numberPickerDatePickerSecond"
        android:layout_toStartOf="@+id/numberPickerDatePickerSecond" />
</RelativeLayout>